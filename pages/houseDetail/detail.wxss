/* pages/houseDetail/detail.wxss */
page{
    background-color: #f6f6f6;
}
.container{
    width: 90%;
    height: 100%;
    margin: auto;   
}

.ilu{
    width: 100%;
    height:300rpx;
}
/*房屋名称*/
.title{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    margin:10rpx 0;
    /* border-bottom: 1px solid #194EA0; */
}
.title text{
    width: 100%;
    text-align: center;
}

/*详细信息*/
.detail{
    padding: 0 20rpx;
    width: 100%;
    height: 150rpx;
    /* border:1px solid red; */
    margin:20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-radius: 15rpx;
    box-shadow: 0 3px 3px 1px #ddd;
    box-sizing: border-box;
    
}
.detail view{
    width:30%;
    height: 100%;
    /* border:1px solid #194EA0; */
}
.detail view text{
    height:75rpx;
    line-height: 75rpx;
}

.detailTxt{
  color: rgb(215,12,24);
}

/*基本信息*/
.basic{
    width: 100%;
    padding:20rpx 20rpx;
    box-sizing: border-box;
    height: 200rpx;
    background-color: #fff;
    border-radius: 15rpx;
    box-shadow: 0 3px 3px 1px #ddd;

}
.basic text{
    width: 100%;
    height: 30rpx;
    font-weight: bold;
    text-indent: 40rpx;
}
.basic .angle{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top:15rpx;
    
}
.basic .angle view{
    width: 50%;
    text-indent: 40rpx;
}

/*地址*/
.address{
    width: 100%;
    height: 150rpx;
    
    margin:20rpx 0;
    background-color: #fff;
    border-radius: 15rpx;
    box-shadow: 0 3px 3px 1px #ddd;
    text-align: center;
    line-height: 150rpx;

}
/* 配置 */
.conf{
    width: 100%;
    height: 180rpx;
    /* border-bottom: 1px solid #194EA0; */
    margin: 20rpx 0;
    background-color: #fff;
    border-radius: 15rpx;
    box-shadow: 0 3px 3px 1px #ddd;
    padding:20rpx;
    box-sizing: border-box;
    
}
.iconlist{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.iconlist image{
    width:80rpx;
}
/* 推荐 */
.rec{
    width: 100%;
    height: 400rpx;
    /* border-bottom: 1px solid #194EA0; */
    background-color: #fff;
    border-radius: 15rpx;
    box-shadow: 0 3px 3px 1px #ddd;
    padding:20rpx;
    box-sizing: border-box;
}

.rec .case{
    width: 100%;
    height:300rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.case image{
    width: 45%;
}

.case text{
    width: 45%;
}

/* 底部 */
.fixed{
    width:100%;
    height: 120rpx;
    position:fixed;
    bottom: 0;
    background: #194EA0;
    opacity: 0.95;
    color:#fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.fixed .like{
    width:10%;
    height: 60%;
    /* border:1px solid #fff; */
}
.fixed .like image{
    width: 100%;
}

.fixed .contact, .fixed .sign{
     width:25%;
     border:1px solid #fff;
     height:60%;
     line-height: 72rpx;
     box-sizing: border-box;
     text-align: center;
     border-radius: 5px;
}

.configBox{
    width: 20%;
    height:90rpx;
    margin:2%;
}