/**/
.orzzzz{
    width:100%;
    background-color: yellow;
    height:150rpx;

    margin-top:30rpx;
    margin-bottom:30rpx;
}
page, .container{
  width:100%;
  height: 100%;
}
.down{
  position:fixed;
  bottom:0;
  width:100%;
  height:80rpx;
  background-color: rgb(0, 255, 34);
  
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.heart {
    width: 10%;
    height: 100%;
}

.image-wrapper {
    width: 100%;
    height: 150rpx;
}

/*option*/
.option{
    width:100%;
    height:100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
}
.option .op-item{
    width:30%;
    height:100%;
    border:1px solid red;
    box-sizing: border-box;
    margin-right:1.5%;
    margin-left:1.5%;
}

/*表格布局  */
.table{
  border: 1px solid gray;
  width: 99.5%;
  margin-top:30rpx;
  margin-bottom:30rpx;
}
/*第一行样式  */
.section-top {
  display: flex;
  width: 600rpx;
  flex-direction: row;
}
#panel{
  background:#fff;
}


.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.flex-cell{
  flex: 1;
}