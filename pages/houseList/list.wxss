.container view{
    box-sizing: border-box;
}
page{
    width:100%;
    height: 100%;
}

.container{
    width:90%;
    height: 100%;
    margin:auto;
}

/*nav*/
.nav{
    /* border:1px solid red; */
    height:20%;
    width:100%;
}
.nav .searchbar{
    height:50%;
    width:100%;
    /* border: 1px solid blue; */
    display: flex;
    justify-content: space-between;
}
.nav .searchbar .search-icon{
    width:15%;
    /* border:1px solid blue; */
    display: flex;
    align-items: center;
}
.nav .searchbar .search-icon image{
    width:100%;
}
.nav .searchbar .inputbox{
    width:70%;
    /* border:1px solid black; */
    display: flex;
    align-items: center;
}
.nav .searchbar .inputbox input{
    border:1px solid #194EA0;
    border-radius: 10rpx;
    width:100%;
    min-height:80rpx;
}
.nav .searchbar .location{
    width:15%;
    /* border:1px solid green; */
    display: flex;
    align-items: center;
}
.nav .searchbar .location image{
    width:70%;
    margin:auto;
}
.nav .filter{
    height:40%;
    width:100%;
    /* border: 1px solid red; */
    display: flex;
    align-items: center;
    justify-content: space-between;
    
}
.nav .filter .filter-item{
    width:20%;
    text-align: center;
}
.nav .filter .filter-item text{
    width:80%;
    color:#fff;
    padding:10rpx 20rpx;
    background-color:#194EA0;
    border-radius: 15rpx;
}
/*house-list*/
.house-list{
    /* border:1px solid blue; */
    height:80%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.house-list .list-item{
    height:25%;
    /* border:1px solid red; */
    width:100%;
    display: flex;
}
.house-list .list-item .house-img{
    width:45%;
    height:100%;
    /* border:1px solid blue; */
    display: flex;
    align-items: center;
   
}
.house-list .list-item .house-img image{
    width:90%;
    height: 80%;
}
.house-list .list-item .house-des{
    width:55%;
    height:100%;
    display: flex;
    align-items: center;
}
.house-list .list-item .house-des text{
    height:80%;
    /* border:1px solid red; */
}