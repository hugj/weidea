    position:fixed;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    /* border:1px solid red; */
    
    background-color:#ccc;
    filter:Alpha(Opacity=60);opacity:0.9;
    z-index: 44;
}
.can{
    width:100%;
    background-color: #fff;
}

.zbtn{
    border:1px solid #194EA0;
    width:100%;
    color:#fff;
    height:100rpx;
    text-align: center;
    /* border-radius: 15rpx; */
    margin-top:10rpx;
    background-color: #194EA0;
    line-height: 100rpx;
}

.add{
    width:90%;
    left:5%;
    border-radius: 15rpx;
    display: flex;
    justify-items: center;
    /* border:1px solid red; */
    height:120rpx;
    margin-top:-20rpx;
    background-color: #fff;
    position: fixed;
    bottom:100rpx;
}
.generate{
