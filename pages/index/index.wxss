/**index.wxss**/

page{
    width:100%;
    height:100%;
}
.container{
    width:100%;
    height:100%;
    /* background-color: #cdad; */
    position:relative;
}
/*searchbar*/
.searchbar{
    width:100%;
    background-color: yellow;
    height:150rpx;
}

/*banner*/
.banner{
    width:100%;
  
    margin-top:30rpx;
    margin-bottom:30rpx;
}

.banner .banner-img{
    width:100%;
}

/*option*/
.option{
    width:100%;
    height:400rpx;
    background-color: greenyellow;
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
}
.option .op-item{
    width:25%;
    height:50%;
    border:1px solid red;
    box-sizing: border-box; 
}

/*news*/
.news{
    width:100%;
}

/*nav*/
.nav{
    width:100%;
    height:100rpx;
    background-color: red;
    bottom:0rpx;
    position: fixed;

}