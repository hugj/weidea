/**index.wxss**/

page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    /* background-color: #cdad; */
    position: relative;
}

/*searchbar*/

.searchbar {
    width: 100%;
    /* background-color: yellow; */
    height: 100rpx;
    display: flex; 
    flex-direction: row;
   padding-top:20rpx;
}
.searchbar .city{
    /* border:1px solid red; */
    width:25%;
    height: 100%;
    display: flex;

    align-items: center;
}

.searchbar .city text{
    height: 70rpx;
    color:#fff;
    width:100%;
    background-color: #194EA0;
    line-height: 70rpx;
    margin-left:35rpx;
    margin-right: 30rpx;
    border-radius: 10rpx;
    text-align: center;

}
.searchbar .search{
    width:60%;
    /* border:1px solid blue; */
    display: flex;
    align-items: center;
}   

.searchbar .search input{
    border:1px solid #194EA0;
    border-radius: 10rpx;
    width:100%;
    min-height:70rpx;
}

.searchbar .map{
    width:15%;
    /* border:1px solid green; */
}
.searchbar .map image{
    width:60%;
    margin-top:15rpx;
    margin-left:20rpx;
}
/*banner*/
.banner {
    width: 100%;
    margin-top:40rpx;
    margin-bottom:40rpx;
}

.banner .banner-img {
    width:100%;
}

/*option*/

.option {
    width: 100%;
    height: 400rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.option .op-item {
    width: 25%;
    height: 50%;
    /* border: 1px solid red; */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.option .op-item .op-icon {
    /* height:70%; *//* background-color:blue; *//* border: 1px solid blue; */
    width: 55%;
    margin: 0 auto;
}

/*news*/

.news {
    width: 100%;
    display: flex;
    margin-top: 30rpx;
    height: 90rpx;
    /* border: 1px solid black; */
    align-items: center;
    /* border-top:1px solid #194EA0; */
}

.news image {
    width: 10%;
    margin-left: 6%;
}

.news .content {
    width: 74%;
    /* border: 1px solid red; */
    height: 100%;
    font-size: 16px;
    display: flex;
    flex-direction: column;
}

.news .content .content-item {
    width: 100%;
    height: 50%;
    /* border: 1px solid blue; */
    display: flex;
    /* justify-content: center;  */
    align-items: center;
    text-align: bottom;
}

.news .content .content-item .title {

}

/*nav*/

.nav {
    width: 100%;
    height: 120rpx;
    background-color:#194EA0;
    bottom: 0rpx;
    position: fixed;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.nav .nav-item{
    width:8%;
    
    height: 100%;
    color:#fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* border:1px solid #fff; */
}

.nav .nav-item .nav-icon{
    width:100%;
    margin-top:13rpx;
}

.nav .nav-item .nav-text{
    margin-top:5rpx;
    font-size: 14px;
}
