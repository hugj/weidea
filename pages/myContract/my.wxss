/* pages/myContract/my.wxss */
.container{
    width: 100%;
    height: 100%;
    background-color: #f6f6f6;
    padding-top:30rpx;
}

.con{
    border-radius: 30rpx;
    background-color: #fff;
    width:90%;
    margin:auto; 
    box-shadow: 0 3px 3px 1px #ddd;
}

.con .tips{
    height:200rpx;
    /* border:1px solid blue; */
    display: flex;
    flex-direction: column;
    width:90%;
    margin:auto;
    border-bottom: 1px solid #eee;
    position: relative;
}
.tips .valid{
    position: absolute;
    border:1px solid rgb(215,12,24);
    color:rgb(215,12,24);
    right:30rpx;
    top:40rpx;
    width:150rpx;
    height:70rpx;
    display: flex;
    line-height: 70rpx;
    text-indent: 20rpx;
    border-radius: 10rpx;
    transform:rotate(-8deg);
}
.tips .title,.tips .time{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    
}
.tips .title{
    font-weight: bold;
}

/* 甲方乙方 */
.content{
    height: 200rpx;
    display: flex;
    flex-direction: column;
    width: 90%;
    margin: auto;
    border-bottom: 1px solid #eee;
}
.content text{
    flex: 1;
    line-height: 100rpx;
}
.hash{
    height: 300rpx;
    display: flex;
    flex-direction: column;
    width: 90%;
    margin:20rpx auto;
}

.hash .ha-ti{
    /* border:1px solid red; */
    display: flex;
    align-items: center;
   
    
}

.hash .ha-ti image{
    width:70rpx;
}

.ha-ti text{
    font-weight: bold;
    line-height: 70rpx;
    text-indent: 20rpx;
}
.ha-ti view{
    border:1px solid #ccc;
    height: 70rpx;
    line-height: 70rpx;
    width:200rpx;
    text-align: center;
    margin-left:100rpx;
    border-radius: 10rpx;
}

.hash .code{
    width:100%;
    padding-top: 30rpx;
    word-wrap:break-word; 
    height:200rpx;
   
   
}

/* warn */
.warn{
    width: 90%;
    margin: auto;
    margin-top: 50rpx;
}
.warn .tit{
    font-weight: bold;
    font-size: 22px;
    margin-bottom: 20rpx;
}
.warn text{
    font-size:15px;
}
/* 按钮 */
.op{
    position: fixed;
    bottom:2rpx;
    height: 80rpx;
    /* border:1px solid red; */
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.op .btn{
    width:300rpx;
    height:100%;
    /* border:1px solid blue; */
    text-align: center;
    line-height: 80rpx;
    border-radius: 15rpx;
    color:#eee;
}
.cancel{
    background-color: rgba(215,12,24,0.75);
}

.share{
    background-color: rgba(25, 78, 160, 0.75);
}
