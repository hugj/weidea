/* pages/login/login.wxss */
.container{
    height:70%;
    margin:auto;
    margin-top: 15%;
    /* border:1px solid red; */
    display: flex;
    flex-direction: column;
    width:90%;
    
    
}

.welcome, .registration{
    flex:1;
    width:100%;
    /* border:1px solid green; */
}

.welcome image{
    width:100%;
}
.welcome{
    display: flex;
    align-items: center;
}
.welcome image{
    width:30%;
}
.welcome text{
    width:70%;
    margin:0 5rpx;
}
.log-info{
    flex:2;
    width: 100%;
}

.info-list{
    height: 100%;
    display: flex;
    flex-direction: column;
   
}
 .item{
    /* border: 1px solid blue; */
    width:100%;
    box-sizing: border-box;
    flex:1;
    display: flex;
    align-items: center;
}
.item input, .item .log-btn{
    width:100%;
    height:80%;
    border:1px solid #194EA0;
    border-radius: 15rpx;
}

.item .log-btn{
    background-color: #194EA0;
    color:#fff;
    display: flex;
    align-items: center;
}

.item .log-btn text{
    width:100%;
    text-align: center;

}
.center{
    text-align: center;
}

.registration{
    margin-top:30rpx;
    border:1px solid #194EA0;
    border-radius: 15rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;

}

.registration text{
    width:70%;
    padding-right: 20rpx;
    text-align: right;
    /* border:1px solid red; */
}
.registration button{
    width:30%;
    /* border:1px solid red; */
    
}