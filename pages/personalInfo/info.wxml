<view class='container'>

    <form>
        <view class='info'>
            <view class='name info-item'>
                <text>姓名</text>
                <input type='text'>
                </input>
            </view>
            <view class='gender info-item'>
                <text>性别</text>
                <radio-group>
                    <label class="radio">
                        <radio value="{{item.name}}" checked="{{item.checked}}" />男

                    </label>
                    <label class="radio">
                        <radio value="{{item.name}}" checked="{{item.checked}}" />女

                    </label>
                </radio-group>
            </view>
            <view class="IDcard info-item">
                <text>身份证</text>
                <input type='text'></input>
            </view>
            <view class='tel info-item'>
                <text>电话号码</text>
                <input type='text'></input>
            </view>
        </view>
        <button class="info-sub"> 确认信息 </button>
    </form>

</view>