page, .container{
    height: 100%;
    width: 100%;
}
.container{
    position: relative;
}

.info{
    height: 600rpx;
    width: 100%;
    /* border:1px solid red; */
    display: flex;
    flex-direction:column;
    align-items: center;
    margin-top:100rpx;
}
.info .info-item{
    box-sizing: border-box;
    width: 100%;
    height:25%;
    /* border:1px solid blue; */
    /* line-height: 150rpx; */
    display: flex;
    align-items: center;

}

.info .info-item text{
    width:30%;
    /* border:1px solid red; */
    padding-left:40rpx;
    text-align: center;
}
.info .info-item input{
    box-sizing: border-box;
    border:1px solid #194EA0;
    border-radius: 15rpx;
    width:70%;
    height:50%;
    margin-right: 40rpx;
}

.info-sub{
    position: fixed;
    bottom: 0rpx;
    width:100%;
    height:100rpx;
    
}