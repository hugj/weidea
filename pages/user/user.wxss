/* pages/user/user.wxss */

page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    background-color: #f6f6f6;
    position: relative;
}

.name{
    width:100%;
    height: 200rpx;
    /* border: 1px solid red; */
    display: flex;
    align-items: center;
}

.name image{
    width:20%;
    margin-left: 10%;
}
.name text{
    width:60%;
    margin-left:5%;
}
/*option*/
.option{
    width:100%;
    height:60%;
    box-sizing: border-box;
    /* border:1px solid blue; */
    display: flex;
    flex-direction: column;
    align-content: center;
  
}
.op-item{
   
    /* border:1px solid #D70C18; */
    border-radius: 15rpx;
    height:25%;
    width:70%;
    display: flex;
    align-items: center;
    margin: 15rpx auto;
    background-color: #fff;
    box-shadow: 0 3px 3px 1px #ddd;
    
}
.op-item .icon{
    width:18%;
    margin-left:15%;
    /* border:1px solid red; */
}
.op-item text{
    width:70%;
    /* border:1px solid green; */
    text-align: center;
    font-size: 20px;
}
/*nav*/

.nav {
    width: 100%;
    height: 120rpx;
    background-color:#194EA0;
    bottom: 0rpx;
    position: fixed;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.nav .nav-item{
    width:8%;
    
    height: 100%;
    color:#fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* border:1px solid #fff; */
}

.nav .nav-item .nav-icon{
    width:100%;
    margin-top:13rpx;
}

.nav .nav-item .nav-text{
    margin-top:5rpx;
    font-size: 14px;
}
